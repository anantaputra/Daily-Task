<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpeningActivity">

   <ImageView
       android:id="@+id/img_image1"
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:src="@drawable/image4" />

   <TextView
       android:id="@+id/tv_textManage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/img_image1"
       android:layout_marginTop="30dp"
       android:layout_marginStart="75dp"
       android:text="@string/manage"
       android:textSize="30sp"
       />

   <TextView
       android:id="@+id/tv_textYour"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tv_textManage"
       android:text="@string/your"
       android:layout_marginStart="75dp"
       android:textSize="30sp"
       />

   <TextView
       android:id="@+id/tv_textDaily"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/tv_textYour"
       android:text="@string/app_name"
       android:layout_marginStart="75dp"
       android:textSize="30sp"
       />

   <Button
       android:layout_below="@id/tv_textDaily"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="45dp"
       android:layout_centerInParent="true"
       android:background="@drawable/tombol_started"
       android:text="@string/getstarted"
       android:id="@+id/btn_get"/>


</RelativeLayout>