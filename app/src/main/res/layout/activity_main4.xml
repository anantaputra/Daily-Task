<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OLAHRAGA"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="30dp">
        </TextView>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_textJeniskelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textColor="@color/biru"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    android:layout_below="@id/tv_textJeniskelamin"
                    android:entries="@array/dropdown_jeniskelamin"/>

                <TextView
                    android:id="@+id/tv_textTinggi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list"
                    android:layout_marginTop="10dp"
                    android:text="Tinggi Badan"
                    android:textColor="@color/biru"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed_textTinggi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_textTinggi"
                    android:hint="Tinggi Badan"/>

                <TextView
                    android:id="@+id/tv_textBerat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ed_textTinggi"
                    android:layout_marginTop="10dp"
                    android:text="Berat Badan"
                    android:textColor="@color/biru"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed_textBerat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_textBerat"
                    android:hint="Berat Badan"/>

                <TextView
                    android:id="@+id/tv_textUmur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ed_textBerat"
                    android:layout_marginTop="10dp"
                    android:text="Umur"
                    android:textColor="@color/biru"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed_textUmur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_textUmur"
                    android:hint="Umur" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_textTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Olahraga"
                    android:textColor="@color/biru"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/listTargetOlahraga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_textTarget" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
